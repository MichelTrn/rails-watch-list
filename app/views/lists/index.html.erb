<div class="banner">
  <div class="container text-center">
    <h1>Save any kind of movie</h1>
  </div>
</div>

<h2 class="mt-3">My Lists</h1>
<div class="row">
  <%@lists.each do |list|%>
  <div class="col-md-4">
    <div class="card p-3 mt-3">
      <p><%= link_to list.name, list_path(list)%></p>
    </div>
  </div>
  <% end %>
</div>
